<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author Type</th>
      <th>Blog Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.titile %></td>
        <td><%= post.author_type %></td>
        <td><%= post.blog_body %></td>
          <td>cretaed By</td>
  <%if current_user%>
        
        <td class='btn-info'><%= link_to 'Show', post %></td>
        <td class="btn-warning"><%= link_to 'Edit', edit_post_path(post) %></td>
        <td class='btn-info'><%= link_to 'Comment',  new_post_path(post) %></td>
        <td class= 'btn-danger brn-trash'><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

